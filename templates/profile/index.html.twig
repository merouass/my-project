{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur{% endblock %}

{% block body %}

{% include "flash.html.twig" %}


  
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
          <div class="col-md-4 gradient-custom text-center text-white"
     style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;
            background: linear-gradient(90deg, #007bff 0%, #6c757d 100%);">

  
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                alt="Avatar" class="img-fluid my-5" style="width: 80px;" />



        
              <h5>{{ app.user.firstName }} {{ app.user.lastName }}</h5>
            
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h2>Information du profil</h2>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h5>Email</h5>
                    <p class="text-muted">{{ app.user.email }}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h5>Phone</h5>
                    <p class="text-muted">{{ app.user.phoneNumber }}</p>
                  </div>

                   <div class="col-6 mb-3">
                    <h5>Adresse</h5>
                    <p class="text-muted">{{ app.user.adress }}</p>
                  </div>

                  <div class="col-6 mb-3">
                    <h5>Code Postal </h5>
                    <p class="text-muted">{{ app.user.postalCode }}</p>
                  </div>

             
                </div>
                <div> <a href="{{path('app_profile_edit')}}" class="btn btn-warning"> Modifier informations </a>
                    <a href="{{path('app_profile_password_edit')}}" class="btn btn-danger"> Modifier mot de passe </a>
               
                
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}